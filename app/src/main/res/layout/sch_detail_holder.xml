<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="12"
        tools:layout_height="wrap_content"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="5"
            android:layout_height="100dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pivotTime"
                android:text="time"
                android:gravity="bottom|center"
                android:layout_weight="0.5"/>
        </LinearLayout>



            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="60dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:src="@drawable/line_point_s"
                    android:layout_height="400dp"
                    android:layout_width="match_parent"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/indx"
                    android:text="1"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="11dp"
                    android:gravity="center" />
            </RelativeLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:layout_weight="9"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:id="@+id/textSchduleFirst"
                android:text="textSchduleFirst"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textSchduleSecond"
                android:text="textSchduleSecond"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textSchduleThird"
                android:text="textSchduleThird"
                android:padding="5dp" />

        </LinearLayout>

    </LinearLayout>
