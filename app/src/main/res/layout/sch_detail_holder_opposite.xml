<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:gravity="left"
    android:id="@+id/background_opposite"
    tools:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="60dp"
        android:orientation="vertical"
        android:weightSum="5"
    android:layout_height="100dp">
        <TextView
            android:id="@+id/pivotTime_opposite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.5"
            android:gravity="top|center"
            android:paddingLeft="10dp"
            android:text="time"
            android:textColor="#e16175"
            android:textSize="18dp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:adjustViewBounds="true"
            android:src="@drawable/line_point_s" />

        <TextView
            android:id="@+id/indx_opposite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="11"
        android:gravity="left"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textSchduleFirst_opposite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left"

            android:padding="5dp"
            android:text="textSchduleFirst"
            android:textColor="#e16175" />

        <TextView
            android:id="@+id/textSchduleSecond_opposite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="textSchduleSecond"
            android:textColor="#e16175" />

        <TextView
            android:id="@+id/textSchduleThird_opposite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="textSchduleThird"
            android:textColor="#e16175" />

    </LinearLayout>
</LinearLayout>
