<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1.5"
        android:background="#ddf0f0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/titlelayoutcorner"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <!--title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/destination_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="게시물 상세페이지"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        <!--여기부터 내용 시작-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="#ddf0f0"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/writer_icon_btn" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="작성자"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/WRITE_NAME_view"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="5dp"
                    android:text="이름..."
                    android:textColor="#555555"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학과"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/DEPARTMENT_view"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="5dp"
                    android:text="학과..."
                    android:textColor="#555555"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학번"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/STUDENT_NO_view"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="5dp"
                    android:text="학번..."
                    android:textColor="#555555"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/DEPARTURE_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="출발지"
                        android:textColor="#555555"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/DEPARTURE_DETAIL_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:text="출발지 설명"
                        android:textColor="#555555"
                        android:textSize="13sp" />

                </LinearLayout>


                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_green_btn" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/DESTINATION_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="도착지"
                        android:textColor="#555555"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/DESTINATION_DETAIL_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:text="도착지 설명"
                        android:textColor="#555555"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="2"
                android:padding="10dp"
                android:rowCount="3">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@drawable/no_poeple_back"
                    android:gravity="center"
                    android:text="총 모집 인원"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:background="#ddf0f0"
                    android:gravity="center"
                    android:text="남은 시간"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/PASSENGER_NUM_view"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="#ddf0f0"
                    android:gravity="center"
                    android:text="5명"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/WAIT_TIME_view"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/no_poeple_back"
                    android:gravity="center"
                    android:hint="몇분..."
                    android:textColor="#ffffff" />

            </GridLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="탑승완료"
                    android:textColor="#eeb8b8"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="비밀번호"
                    android:textColor="#000000"
                    android:textColorHint="#bbeeb8b8"
                    android:textSize="15sp" />

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ride_modify_icon"
                    android:text="@string/modify" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#eeeeee"
                android:gravity="center"
                android:text="댓글"
                android:textColor="#434343" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#ddf0f0" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/commentRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="5dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!--    footer  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/comment_info_Layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="이름"
                android:textColor="@android:color/background_dark" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/comment_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="#000000" />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/comment_info_ok_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/ride_modify_icon"
                android:text="@string/OK" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/comment_info_Layout"
            android:background="#eeb8b8"
            android:orientation="horizontal"
            android:weightSum="10">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/comment_popup_btn"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/bottom_fullwriter_icon" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/comment_editText"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="#ffffff"
                android:hint="댓글을 입력하세요"
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/comment_btn"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="1.5"
                android:background="@drawable/ride_modify_icon"
                android:text="@string/OK" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>